<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="def.abc.getbel">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.BLUETOOTH"/>  <!-- ←これを書かないとダメ！！ -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>  <!-- ←これを書かないとダメ！！ -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>  <!-- ←これを書かないとダメ！！ -->
</manifest>